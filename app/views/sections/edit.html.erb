<h2> Edit Section </h2>

<% if @section.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sections/<%= @section.id %>" method ="post">
    <input name="_method" type="hidden" value="patch">
    <p><label for="section_name"> Name </label></p>
    <input id="section_name" name="section[name]" type="text" value="<%=@section.name%>"></input>
     <p><label for="section_chapter_id">Chapters</label></p>
      <select id="section_chapter_id" name='section[chapter_id]'>
      <% Chapter.all.each do |chapter|%>
          <option value="<%= chapter.id %>"><%= chapter.name %></option>
      <% end %>
      </select>
    <p><button>Update Section</button></p>
</form>
<p><a  href="/sections/<%= @section.id %>"
      data-confirm = "you sure?"
      data-method="delete"
      rel="nofollow"><button>Delete Section</button></a></p>
