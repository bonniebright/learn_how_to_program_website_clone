<h2> Table of Contents </h2>
<ul>
  <% Chapter.all.each do |chapter| %>
    <li> <%= chapter.name %> </li>
    <ul>
    <% chapter.sections.each do |section| %>
      <li><%= section.name %></li>
      <ul>
        <% section.lessons.each do |lesson| %>
          <li> <a href="/lessons/<%=lesson.id%>"><%= lesson.name %> </a> </li>
        <% end %>
      </ul>
    <% end %>
    </ul>
  <% end %>
</ul>







